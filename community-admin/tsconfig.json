{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.vitest.json"
    }
  ],
  "compilerOptions": {
    "allowJs": true,       // 允许编译JS文件
    "checkJs": false,      // 先关闭JS类型检查（逐步迁移时再开启）
    "esModuleInterop": true,
    "strict": false ,       // 初期关闭严格模式（降低迁移成本）
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"]  // 确保包含JS和TS文件
}
