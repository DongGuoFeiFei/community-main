<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.communityserver.mapper.ArticleCategoryRelationMapper">

    <resultMap id="BaseResultMap" type="com.example.communityserver.entity.model.ArticleCategoryRelation">
        <id column="relation_id" property="id" jdbcType="BIGINT"/>
        <result column="article_id" property="articleId" jdbcType="BIGINT"/>
        <result column="category_id" property="categoryId" jdbcType="BIGINT"/>
        <result column="created_at" property="createdAt" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!-- 批量插入文章-分类关联关系 -->
    <insert id="batchInsert">
        INSERT INTO article_category_relation (article_id, category_id, created_at)
        VALUES
        <foreach collection="categoryIds" item="categoryId" separator=",">
            (#{articleId}, #{categoryId}, NOW())
        </foreach>
        ON DUPLICATE KEY UPDATE
        article_id = VALUES(article_id),
        category_id = VALUES(category_id)
    </insert>
    <delete id="delACRelation" parameterType="java.util.List">
        DELETE FROM article_category_relation
        WHERE category_id IN
        <foreach collection="categoryIds" item="categoryId" open="(" separator="," close=")">
            #{categoryId}
        </foreach>
        and article_id = #{articleId}
    </delete>
</mapper>