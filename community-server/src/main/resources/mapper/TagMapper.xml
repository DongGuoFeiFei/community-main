<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.communityserver.mapper.TagMapper">

    <select id="getPostTags" resultType="com.example.communityserver.entity.model.Tag">
        SELECT t.id,
               t.name,
               t.slug,
               t.description,
               t.icon,
               t.color,
               t.create_at,
               t.create_at,
               t.is_del
        FROM tag t
                 INNER JOIN
             article_tag at
        ON t.id = at.tag_id
        WHERE
            at.article_id = #{postId}
          AND
            t.is_del = 0
    </select>
</mapper>
