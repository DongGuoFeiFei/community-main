# 生产环境配置
server:
  port: 8081

spring:
  # redis配置
  redis:
    host: redis  # 使用docker容器名
    port: 6379
    database: 1
  # mysql 配置
  datasource:
    driver-class-name: com.mysql.cj.jdbc.Driver
    url: jdbc:mysql://mysql:3306/db_community?useSSL=false&serverTimezone=Asia/Shanghai
    username: ${datasource.username.pro}
    password: ${datasource.password.pro}
  # MVC的URL路径匹配策略
  mvc:
    path match:
      matching-strategy: ant-path-matcher
  # 邮箱配置
  mail:
    host: smtp.qq.com
    port: 587
    username: ${mail.username}
    password: ${mail.password}
    protocol: smtp
    properties:
      mail:
        smtp:
          auth: true
          starttls:
            enable: true
          connectiontimeout: 5000
          timeout: 3000
          writetimeout: 5000
        transport:
          protocol: smtp

# mybatis-plus 数据库查询日志
mybatis-plus:
  configuration:
    log-impl: org.apache.ibatis.logging.nologging.NoLoggingImpl

# Swagger配置
swagger:
  enabled: false

# 文件路径
file:
  upload:
    path: /data/upload

# 日志文件配置
logging:
  file:
    name: /data/logs/application.log
  level:
    com.baomidou.mybatisplus: warn

# 大模型接口配置
deepseek:
  api:
    key: ${deepseek.key}
    url: ${deepseek.url}

